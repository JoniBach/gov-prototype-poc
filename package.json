{
	"name": "gov-prototype-poc",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "npx playwright test e2e",
		"test": "npm run test:e2e",
		"test:components": "npx playwright test e2e/Components.test.ts",
		"test:journeys": "npx playwright test e2e/journeys/Journeys.test.ts",
		"test:journey": "node -e \"process.env.JOURNEY_ID = process.argv[1]; require('child_process').spawnSync('npx', ['playwright', 'test', 'e2e/journeys/Journeys.test.ts'], { stdio: 'inherit', env: process.env });\"",
		"test:recordings": "npx playwright test recordings",
		"gen": "npx tsx ./src/lib/ai/main.ts run",
		"gen:multi": "node scripts/gen-multi.js"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@playwright/test": "^1.57.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/lodash": "^4.17.21",
		"@types/node": "^22",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.1",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"chalk": "^5.6.2",
		"cli-progress": "^3.12.0",
		"commander": "^14.0.2",
		"dotenv": "^17.2.3",
		"govuk-frontend": "^5.13.0",
		"inquirer": "^13.1.0",
		"lodash": "^4.17.21",
		"marked": "^17.0.1",
		"nanoid": "^5.1.6",
		"openai": "^6.15.0",
		"ora": "^9.0.0",
		"short-uuid": "^6.0.3",
		"zod": "^4.3.5"
	}
}
