{
  "id": "apply-provisional-driving-licence",
  "name": "Apply for a Provisional Driving Licence",
  "landingPage": {
    "title": "Apply for a provisional driving licence",
    "lead": "Use this service to apply online for your first (provisional) driving licence to drive a car, motorcycle or moped in Great Britain.",
    "sections": [
      {
        "type": "heading",
        "content": "What you can use this service for",
        "level": "m"
      },
      {
        "type": "list",
        "content": [
          "apply for your first provisional driving licence",
          "tell DVLA your personal details and addresses",
          "confirm your identity and share details from your identity documents",
          "declare any medical conditions that may affect your driving",
          "pay the application fee securely online"
        ],
        "listType": "bullet"
      },
      {
        "type": "heading",
        "content": "Before you start",
        "level": "m"
      },
      {
        "type": "list",
        "content": [
          "be at least 15 years and 9 months old",
          "be normally resident in Great Britain",
          "not currently be disqualified from driving",
          "have a valid UK passport or other accepted identity document, if you have one",
          "have your National Insurance number, if you have one",
          "have your addresses for the last 3 years",
          "have a debit or credit card to pay the fee"
        ],
        "listType": "bullet"
      },
      {
        "type": "heading",
        "content": "What happens next",
        "level": "m"
      },
      {
        "type": "paragraph",
        "content": "DVLA will check your details against government records where possible. If your application is successful, DVLA will issue and post your photocard provisional driving licence to the address you give."
      }
    ],
    "startButtonText": "Start now",
    "startButtonHref": "/department-for-transport/apply-for-provisional-driving-licence/apply"
  },
